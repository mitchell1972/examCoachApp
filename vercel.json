{
  "buildCommand": "export PATH=\"$PWD/flutter/bin:$PATH\" && flutter build web --release --base-href /",
  "outputDirectory": "build/web",
  "framework": null,
  "installCommand": "./deploy.sh",
  "redirects": [
    {
      "source": "/((?!api/|index.html).*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://mitchell1972.github.io",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type",
        "Access-Control-Max-Age": "86400"
      },
      "dest": "/api/options"
    },
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "https://mitchell1972.github.io"
      },
      "continue": true
    }
  ]
}
